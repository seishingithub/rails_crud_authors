<%= form_for @author do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit 'Create Author' %>
  </p>
<% end %>

<% @authors.each do |author| %>
  <ul>
    <li>
      <%= link_to author.name, author_path(author) %>
      <br>
      <%= author.title %>
    </li>
  </ul>
<% end %>